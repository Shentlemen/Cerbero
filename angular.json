{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "Cerbero": {
      "projectType": "application",
      "schematics": {},
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/cerbero",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": [
              "zone.js",
              "@angular/localize/init"
            ],
            "tsConfig": "tsconfig.app.json",
            "assets": [
              "src/favicon.ico",
              {
                "glob": "**/*",
                "input": "public/assets",
                "output": "assets"
              }
            ],
            "styles": [
              "@angular/material/prebuilt-themes/azure-blue.css",
              "src/styles.css",
              {
                "input": "public/assets/css/all.min.css",
                "bundleName": "fontawesome",
                "inject": true
              },
              {
                "input": "public/assets/css/bootstrap-5.1.3.css",
                "bundleName": "bootstrap",
                "inject": true
              },
              {
                "input": "public/assets/css/material-icons.css",
                "bundleName": "material-icons",
                "inject": true
              },
              {
                "input": "public/assets/css/roboto-fonts.css",
                "bundleName": "roboto",
                "inject": true
              },
              {
                "input": "public/assets/css/open-sans.css",
                "bundleName": "open-sans",
                "inject": true
              }
            ],
            "scripts": [],
            "allowedCommonJsDependencies": [
              "canvg",
              "core-js",
              "raf",
              "rgbcolor",
              "jspdf-autotable",
              "@canvasjs/charts",
              "html2canvas",
              "dompurify"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "3mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "8kb",
                  "maximumError": "10kb"
                }
              ],
              "outputHashing": "all",
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "Cerbero:build:production"
            },
            "development": {
              "buildTarget": "Cerbero:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "tsconfig.spec.json",
            "assets": [
              "src/favicon.ico",
              {
                "glob": "**/*",
                "input": "public/assets",
                "output": "/assets"
              }
            ],
            "styles": [
              "@angular/material/prebuilt-themes/azure-blue.css",
              "src/styles.css"
            ],
            "scripts": []
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}